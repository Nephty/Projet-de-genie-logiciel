<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.front.controllers.ProductDetailsSceneController">
    <Pane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: rgb(125, 125, 135);">
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    onKeyReleased="#handleButtonKeyReleased"
                    prefHeight="70.0" prefWidth="1280.0">
            <Button fx:id="backButton" layoutX="14.0" layoutY="17.0"
                    onMouseClicked="#handleBackButtonClicked" prefHeight="36.0" prefWidth="120.0"
                    onMouseEntered="#handleButtonMouseEntered" onMouseExited="#handleButtonMouseExited"
                    onKeyReleased="#handleButtonKeyReleased"
                    style="-fx-background-color: rgb(210, 205, 200); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 1.5; -fx-border-insets: -1.5; -fx-border-radius: 5;"
                    text="Back" textFill="#0a0a14">
                <font>
                    <Font size="14.0"/>
                </font>
                <effect>
                    <InnerShadow height="5.0" offsetX="-2.5" offsetY="-2.5" radius="2.0" width="5.0"/>
                </effect>
            </Button>
        </AnchorPane>
        <AnchorPane layoutY="70.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    onKeyReleased="#handleButtonKeyReleased"
                    minWidth="-Infinity" prefHeight="650.0" prefWidth="1280.0">
            <ListView fx:id="accountsListView" fixedCellSize="50.0" layoutX="30.0" layoutY="75.0"
                      onKeyReleased="#handleButtonKeyReleased"
                      prefHeight="550.0" prefWidth="1000.0"
                      style="-fx-background-color: rgb(210, 205, 200); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 3; -fx-border-insets: -3; -fx-border-radius: 5;"/>
            <Label fx:id="lastUpdateTimeLabel" alignment="CENTER" layoutX="477.0" layoutY="19.0"
                   prefHeight="36.0" prefWidth="326.0"
                   style="-fx-background-color: rgb(230, 230, 230); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 1.5; -fx-border-insets: -1.5; -fx-border-radius: 5;"
                   text="Accounts not updated."/>
            <Button fx:id="historyButton" layoutX="1075.0" layoutY="250.0"
                    onMouseClicked="#handleHistoryButtonClicked" prefHeight="30.0" prefWidth="170.0"
                    onMouseEntered="#handleButtonMouseEntered" onMouseExited="#handleButtonMouseExited"
                    onKeyReleased="#handleButtonKeyReleased"
                    style="-fx-background-color: rgb(210, 205, 200); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 1.5; -fx-border-insets: -1.5; -fx-border-radius: 5;"
                    text="History" textFill="#0a0a14">
                <effect>
                    <InnerShadow height="5.0" offsetX="-2.5" offsetY="-2.5" radius="2.0" width="5.0"/>
                </effect>
            </Button>
            <Button fx:id="transferButton" layoutX="1075.0" layoutY="200.0"
                    onMouseClicked="#handleTransferButtonClicked" prefHeight="30.0" prefWidth="170.0"
                    onMouseEntered="#handleButtonMouseEntered" onMouseExited="#handleButtonMouseExited"
                    onKeyReleased="#handleButtonKeyReleased"
                    style="-fx-background-color: rgb(210, 205, 200); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 1.5; -fx-border-insets: -1.5; -fx-border-radius: 5;"
                    text="Transfer" textFill="#0a0a14">
                <effect>
                    <InnerShadow height="5.0" offsetX="-2.5" offsetY="-2.5" radius="2.0" width="5.0"/>
                </effect>
            </Button>
            <Label fx:id="loadingAccountsLabel" layoutX="870.0" layoutY="29.0" opacity="0.0"
                   prefHeight="16.0" prefWidth="154.0" text="Loading products..."/>
            <Button fx:id="fetchAccountButton" layoutX="1075.0" layoutY="75.0"
                    onMouseClicked="#handleFetchAccountsButtonClicked" prefHeight="30.0" prefWidth="170.0"
                    onMouseEntered="#handleButtonMouseEntered" onMouseExited="#handleButtonMouseExited"
                    onKeyReleased="#handleButtonKeyReleased"
                    style="-fx-background-color: rgb(210, 205, 200); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 1.5; -fx-border-insets: -1.5; -fx-border-radius: 5;"
                    text="Refresh accounts">
                <effect>
                    <InnerShadow height="5.0" offsetX="-2.5" offsetY="-2.5" radius="2.0" width="5.0"/>
                </effect>
            </Button>
            <Button fx:id="toggleButton" layoutX="1075.0" layoutY="350.0"
                    onMouseClicked="#handleToggleButtonClicked" prefHeight="30.0" prefWidth="170.0"
                    onMouseEntered="#handleButtonMouseEntered" onMouseExited="#handleButtonMouseExited"
                    onKeyReleased="#handleButtonKeyReleased"
                    style="-fx-background-color: rgb(210, 205, 200); -fx-border-color: rgb(10, 10, 20); -fx-border-width: 1.5; -fx-border-insets: -1.5; -fx-border-radius: 5;"
                    text="Toggle" textFill="#0a0a14">
                <effect>
                    <InnerShadow height="5.0" offsetX="-2.5" offsetY="-2.5" radius="2.0" width="5.0"/>
                </effect>
            </Button>
            <Label fx:id="togglingProductLabel" layoutX="1094.0" layoutY="330.0" opacity="0.0"
                   prefHeight="16.0" prefWidth="132.0" text="Toggling product..."/>
            <Label fx:id="toggledOnProductLabel" layoutX="1089.0" layoutY="385.0" opacity="0.0"
                   prefHeight="16.0" prefWidth="143.0" text="Product toggled on !" textFill="#00c800"/>
            <Label fx:id="toggledOffProductLabel" layoutX="1089.0" layoutY="385.0" opacity="0.0"
                   prefHeight="16.0" prefWidth="143.0" text="Product toggled off !" textFill="#c80000"/>
            <Label fx:id="accountInactiveLabel" layoutX="1090.0" layoutY="231.0" prefHeight="17.0"
                   prefWidth="143.0" text="Account is not active." textFill="#c80000" visible="false"/>
        </AnchorPane>
    </Pane>
</Pane>
